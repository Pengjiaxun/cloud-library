/* pages/login/login.wxss */
.container {
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 280rpx 0;
  box-sizing: border-box;
}
.bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
   z-index: -1;
   opacity: 0.9;
}
.bg-img image {
  width: 100%;
  height: 100%;  
}
.main {
  text-align: center;
}
.title {
  font-size: 40rpx;
  color: #fff;  
  margin-bottom: 40rpx;
  font-weight: bolder;
}
.account-input, .pwd-input {
  margin-bottom: 30rpx;
  border: 6rpx solid #fff;
  border-radius: 10rpx;
  padding: 10rpx;
  color: #fff;
  font-size: 30rpx;
}
.login-btn button {
  width: 100%;
}